{
  "name": "agent-discoveries",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "prepare": "husky install",
    "install:backend": "cd agent-discoveries-backend && npm install",
    "install:frontend": "cd agent-discoveries-frontend && npm install",
    "postinstall": "run-s install:backend install:frontend",
    "test:backend": "cd ./agent-discoveries-backend && npm test",
    "test:frontend": "cd ./agent-discoveries-frontend && npm test",
    "test": "run-s test:**",
    "dev:backend": "./agent-discoveries-backend && npm run dev",
    "dev:frontend": "./agent-discoveries-frontend && npm run dev",
    "dev": "run-p -l dev:**"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "jest": "^29.1.2",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "pretty-quick": "^3.1.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  }
}
